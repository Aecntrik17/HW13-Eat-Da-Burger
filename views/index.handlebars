<h1>Burgers You want to Eat!</h1>

<h2></h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{burger_name}}

        <button class="change-eaten" data-id="{{id}}" data-devoured="{{devoured}}">
            Devour Me!</button>

    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Eaten!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>



    <button type="submit">Add Burger</button>
</form>