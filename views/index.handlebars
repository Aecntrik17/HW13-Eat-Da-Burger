<h1>Burgers You want to Eat!</h1>

<h2></h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Eaten!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="eaten">Hungry?</label><br>
        <input type="radio" name="eaten" value="1" checked> eaten!<br>
        <input type="radio" name="eaten" value="0"> Hungry!
    </div>

    <button type="submit">Add Burger</button>
</form>